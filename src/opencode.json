{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "laravel-boost": {
            "type": "local",
            "enabled": true,
            "command": [
                "php",
                "artisan",
                "boost:mcp"
            ]
        }
    },
    "formatter": {
        "pint": {
            "command": [
                "./vendor/bin/pint",
                "$FILE"
            ],
            "extensions": [
                ".php"
            ]
        },
        "rector": {
            "command": [
                "./vendor/bin/rector",
                "$FILE"
            ],
            "extensions": [
                ".php"
            ]
        }
    },
    "permission": {
        "bash": {
            "git *": "ask",
            "php artisan serve": "ask",
            "npm run dev": "ask",
            "npm run build": "ask",
            "pnpm dev": "ask",
            "pnpm build": "ask",
            "bun dev": "ask",
            "bun build": "ask",
            "deno task dev": "ask",
            "deno task build": "ask"
        }
    }
}