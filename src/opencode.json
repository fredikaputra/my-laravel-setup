{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "laravel-boost": {
            "type": "local",
            "enabled": true,
            "command": [
                "php",
                "artisan",
                "boost:mcp"
            ]
        }
    },
    "formatter": {
        "pint": {
            "command": ["./vendor/bin/pint", "$FILE"],
            "extensions": [".php"]
        },
		"rector": {
            "command": ["./vendor/bin/rector", "$FILE"],
            "extensions": [".php"]
        }
    }
}